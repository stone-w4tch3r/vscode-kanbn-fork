{
  "name": "vscode-kanbn-boards",
  "displayName": "Kanbn Extension for VSCode",
  "description": "An extension for Visual Studio Code that allows you to manage tasks on a kanban board.",
  "icon": "resources/kanbn.png",
  "galleryBanner": {
    "color": "#72abdd",
    "theme": "dark"
  },
  "version": "0.14.1",
  "engines": {
    "vscode": "^1.73.1"
  },
  "author": "Gordon Larrigan",
  "contributors": [
    {
      "name": "Zigmas Bitinas"
    }
  ],
  "license": "MIT",
  "publisher": "samgiz",
  "keywords": [
    "kanbn",
    "kanban",
    "project",
    "management",
    "task",
    "todo",
    "agile",
    "scrum",
    "sprint",
    "board"
  ],
  "categories": [
    "Visualization",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/samgiz/vscode-kanbn.git"
  },
  "activationEvents": [
    "onStartupFinished",
    "onCustomEditor:kanbn.board",
    "onCustomEditor:kanbn.task"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kanbn.createBoard",
        "title": "Create board",
        "category": "Kanbn"
      },
      {
        "command": "kanbn.openBoard",
        "title": "Open board",
        "category": "Kanbn"
      },
      {
        "command": "kanbn.addTask",
        "title": "Add task",
        "category": "Kanbn"
      },
      {
        "command": "kanbn.openTask",
        "title": "Open task",
        "category": "Kanbn"
      },
      {
        "command": "kanbn.burndown",
        "title": "Open burndown chart",
        "category": "Kanbn"
      },
      {
        "command": "kanbn.archiveTasks",
        "title": "Archive tasks",
        "category": "Kanbn"
      },
      {
        "command": "kanbn.restoreTasks",
        "title": "Restore tasks",
        "category": "Kanbn"
      }
    ],
    "customEditors": [
      {
        "viewType": "kanbn.board",
        "displayName": "Kanbn Board",
        "selector": [
          {
            "filenamePattern": "**/.kanbn/index.md"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "kanbn.task",
        "displayName": "Kanbn Task",
        "selector": [
          {
            "filenamePattern": "**/.kanbn/tasks/*.md"
          }
        ],
        "priority": "default"
      }
    ],
    "configuration": {
      "title": "Kanbn",
      "properties": {
        "kanbn.additionalBoards": {
          "type": "array",
          "default": [],
          "description": "Specify additional kanbn boards in non-standard locations."
        },
        "kanbn.showUninitialisedStatusBarItem": {
          "type": "boolean",
          "default": true,
          "description": "Show the status bar item in workspaces where Kanbn has not yet been initialised."
        },
        "kanbn.showTaskNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications when a task is created, updated or deleted."
        },
        "kanbn.showSprintButton": {
          "type": "boolean",
          "default": false,
          "description": "Show a 'Start sprint' button on the Kanbn board."
        },
        "kanbn.showBurndownButton": {
          "type": "boolean",
          "default": false,
          "description": "Show a 'Burndown chart' button on the Kanbn board."
        }
      }
    }
  },
  "dependencies": {
    "@samgiz/kanbn": "git@github.com:samgiz/kanbn.git#0852ee3044f09febf5a3f5a00dc9b159e793628f",
    "@types/vscode": "1.92.0",
    "@vscode/codicons": "0.0.36",
    "@vscode/test-electron": "2.4.1",
    "dateformat": "5.0.3",
    "param-case": "4.0.0",
    "path": "0.12.7",
    "throttle-debounce": "5.0.2",
    "uuid": "10.0.0"
  },
  "scripts": {
    "install:all": "npm install && npm install --prefix webview-ui",
    "build:prod": "tsc --noEmit && cross-env NODE_ENV=production npm run build:prod --prefix webview-ui && tsx build.ts",
    "build:dev": "cross-env NODE_ENV=development npm run build:dev --prefix webview-ui && tsx build.ts",
    "package": "npm run build:prod && vsce package",
    "publish:vscode": "npm run build:prod && vsce publish",
    "publish:openvsx": "npm run build:prod && ovsx publish",
    "publish": "npm run build:prod && vsce publish && ovsx publish"
  },
  "devDependencies": {
    "@eslint/js": "9.9.0",
    "@types/dateformat": "5.0.2",
    "@types/eslint__js": "8.42.3",
    "@types/jest": "29.5.12",
    "@types/lodash": "4.17.7",
    "@types/node": "22.3.0",
    "@types/throttle-debounce": "5.0.2",
    "@types/uuid": "10.0.0",
    "cross-env": "7.0.3",
    "esbuild": "0.24.0",
    "eslint": "9.9.0",
    "eslint-config-prettier": "9.1.0",
    "ovsx": "0.9.4",
    "prettier": "3.3.3",
    "tsx": "^4.19.1",
    "typescript": "5.5.4",
    "typescript-eslint": "8.1.0",
    "@vscode/vsce": "3.1.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
